<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic5"
    tools:context=".Chefloginemail">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="275dp"
        android:layout_height="415dp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtemailcustloginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/email_black"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="text|textEmailAddress"
                tools:ignore="TouchTargetSizeCheck"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtpasschefloginemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:id="@+id/forgotpass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="Forgot Password?"
                android:textColor="#090909"
                android:textSize="16dp" />

            <Button
                android:id="@+id/btnloginchefloginemail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/crt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:text="Don't Have an Account? Create"
                android:textColor="#090909"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="103dp"
                    android:layout_height="1dp"
                    android:id="@+id/hr"
                    android:layout_marginTop="20dp"
                    android:background="#090909"/>

                <TextView
                    android:layout_width="44dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/OR"
                    android:text="OR"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:textColor="#090909"/>
                <TableRow
                    android:layout_width="103dp"
                    android:layout_height="1dp"
                    android:id="@+id/hr2"
                    android:layout_marginTop="20dp"
                    android:background="#090909"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signphone"
                android:text="Sign In With"
                android:layout_marginTop="11dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textColor="#090909"/>

            <Button
                android:id="@+id/btnphonechefloginemail"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/btnbluiesh"
                android:drawableLeft="@drawable/phone"
                android:padding="10dp"
                android:text="Phone"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>